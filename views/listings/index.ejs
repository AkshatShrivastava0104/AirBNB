<% layout("/layouts/boilerplate.ejs") %>
    <div class="all-filters">
        <div id="filters" >
            <% let categories = [
                { name: "Rooms", icon: "fa-bed" },
                { name: "Iconic Cities", icon: "fa-mountain-city" },
                { name: "Mountains", icon: "fa-mountain" },
                { name: "Castles", icon: "fa-brands fa-fort-awesome" },
                { name: "Pools", icon: "fa-water-ladder" },
                { name: "Camping", icon: "fa-campground" },
                { name: "Farms", icon: "fa-wheat-awn" },
                { name: "Beach", icon: "fa-umbrella-beach" },
                { name: "Nature", icon: " fa-brands fa-pagelines" },
                { name: "Homes", icon: "fa-house" }
            ]; %>
        
            <% categories.forEach(category => { %>
                <div class="filter <%= category.name === selectedCategory ? 'active-filter' : '' %>" 
                     onclick="filterListings('<%= category.name %>')">
                    <div><i class="fa-solid <%= category.icon %>"></i></div>
                    <p><%= category.name %></p>
                </div>
            <% }) %>
        </div>
        <div class="form-check form-switch form-check-reverse d-tax">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-xs-2">
        <% if (allListings.length === 0) { %>
            <div class="no-filter col-8 text-center">
                <h2 class="text-muted">No BNBs found for <b>"<%= selectedCategory %>"</b></h2>
                <br>
                <button class="btn btn-secondary" onclick="window.location.href='/listings'">Reset Filters</button>
            </div>
        <% } else { %>
            <% for (let listing of allListings) { %>
                <a href="/listings/<%=listing._id%>">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
                        <div class="card-body">
                            <p class="card_text">
                                <b><%= listing.title %></b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %>/Night
                                <i class="tax-info">&nbsp;+ 18% GST =</i><br>
                                <b class="tax-info">&#8377;<%= (listing.price * 1.18).toLocaleString("en-IN") %></b>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        <% } %>
    </div>

    <script>

        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", ()=> {
            let taxInfo = document.getElementsByClassName("tax-info")
            for (info of taxInfo) {
                if (info.style.display !="inline"){
                    info.style.display ="inline";
                }
                else {
                    info.style.display ="none";
                }
            }
        })


        function filterListings(category) {
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("category") === category) {
            window.location.href = "/listings"; // Reset filter if clicked again
        } else {
            window.location.href = `/listings?category=${category}`;
        }
        }

    </script>