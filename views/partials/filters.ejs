<div class="all-filters">
    <div id="filters" >
        <% let categories = [
            { name: "Rooms", icon: "fa-solid fa-bed" },
            { name: "Iconic Cities", icon: "fa-solid fa-mountain-city" },
            { name: "Mountains", icon: "fa-solid fa-mountain" },
            { name: "Castles", icon: "fa-brands fa-fort-awesome" },
            { name: "Pools", icon: "fa-solid fa-water-ladder" },
            { name: "Camping", icon: "fa-solid fa-campground" },
            { name: "Farms", icon: "fa-solid fa-wheat-awn" },
            { name: "Beach", icon: "fa-solid fa-umbrella-beach" },
            { name: "Nature", icon: "fa-brands fa-pagelines" },
            { name: "Homes", icon: "fa-solid fa-house" }
        ]; %>
    
        <% categories.forEach(category => { %>
            <div class="filter <%= category.name === selectedCategory ? 'active-filter' : '' %>" 
                 onclick="filterListings('<%= category.name %>')">
                <div><i class="<%= category.icon %>"></i></div>
                <p class="category-name"><%= category.name %></p>
            </div>
        <% }) %>
    </div>
    <div class="form-check form-switch form-check-reverse d-tax">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
</div>